    "(U|hs|k)"
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       0;
        relTol          0.1;
    }

    "(U|hs|k)Final"
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-10;
        relTol          0.1;
    }

    Yi
    {
        $hsFinal;
    }

}

PIMPLE
{
    nOuterCorrectors 2;
    nCorrectors     2; // usually 2, no more than 4
    nNonOrthogonalCorrectors 0;
